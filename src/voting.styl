.voting-wrapper
  position fixed
  background #fff
  z-index 1000
  bottom 0
  right 5%
  border 1px solid #ddd
  transition 0.2s

  .voting-header
    background: #39c2d7
    display flex
    font-size: 18px
    .voting-title
      font-weight: bold
      font-family: Oswald Regular, Arial,sans-serif
      color: #fff
      flex 1
      text-align center
      padding 8px 4px
    .voting-close
      cursor: pointer
      border: 0
      color: #fff
      background: #39c2d7
      font-size: 30px
      &:hover
        color: #f4f4f4

  .voting-content
    display flex
    height 100%
  .voting-item
    width: 175px
    &:first-child button
      border-left: 0
    &:last-child button
      border-right: 0
    button
      font-family: Source Sans Pro, Helvetica, Arial,sans-serif;
      color: #454746
      cursor: pointer
      border-right: .5px solid #ddd
      border-left: .5px solid #ddd
      border-top: 0
      border-bottom: 0
      min-height: 75px
      font-size: 14px
      width: 100%
      height: 100%
      background: #fff
      &:hover
        background: #f4f4f4
